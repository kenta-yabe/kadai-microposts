<% if current_user.reg_favorites?(reg_post) %>

 <%= form_with(model: current_user.favorites.find_by(micropost_id: reg_post.id), local: true, method: :delete) do |f| %>
 
  <%= hidden_field_tag :micropost_id, reg_post.id %>
  <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-sm' %>

 <% end %>

<% else %>

 <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
 
  <%= hidden_field_tag :micropost_id, reg_post.id %>
  <%= f.submit 'お気に入り登録', class: 'btn btn-primary btn-sm' %>

 <% end %>

<% end %>

